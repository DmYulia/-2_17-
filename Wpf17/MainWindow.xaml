<Window x:Class="Wpf17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf17"
        mc:Ignorable="d"
        Title="MainWindow" Height="110" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="txb" Text="Составь свой цвет!"
                   Margin="10" Padding="10"
                   Background="AliceBlue">

        </TextBlock>
        <local:ColorIndex Grid.Column="1"
                          x:Name="colorIndex" 
                          Margin="6" Padding="1"
                          HorizontalAlignment="Center" Width="250"/>
    </Grid>
</Window>
